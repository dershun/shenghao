@import "/public/common.wxss";

.nav_title{
  height:80rpx;
  font-size:28rpx;
  line-height:80rpx;
  padding-left:20rpx;
}

.p_select{
  background:#fff;
  height:100rpx;
  display:flex;
  flex-direction: row;
  font-size:28rpx;
  align-items: center;
  border-bottom:1px solid #efefef;
  }

.p_select>radio{
    width:80rpx;
    margin-left:20rpx;
  }

.p_select2{
  background:#fff;
  font-size:28rpx;
  align-items: center;
  border-bottom:1px solid #efefef;
  color:#777;

  }

  .p_select2 .nametel{
    display: flex;
    flex-direction: row;
    width: 100%;
  }

  .p_select2 .address{
    width: 100%;
    padding-top: 20rpx;
    padding-left: 30rpx;
    padding-bottom: 30rpx;
  }

  .p_select2 .nametel > view{
    flex:1
  }

  .p_select2 .nametel .name{
    padding-top: 20rpx;
    padding-left: 30rpx;
  }

  .p_select2 .nametel .tel{
    text-align: right;
    padding-top: 20rpx;
    padding-right: 30rpx;
  }

  .huanaddress{
    float:right;
    margin-right:30rpx;
    color:#009999;
  }

  .p_text{
    width:150rpx;
  }
  .p_info{
    flex:1;
    color:#797979;
  }
  .padding_left_20{
    padding-left:20rpx;
  }
  .p_address{
    flex:1;
  }
  .more{
    width:60rpx;
  }
  .more>image{
    height:40rpx;
    width:40rpx;
  }

  .goods_list{
  display:flex;
  flex-direction: row;
  height:150rpx;
  background-color:#fff;
  padding:20rpx;
  font-size:24rpx;
  border-bottom:1px solid #efefef;
}
.goods_thumb{
  width:150rpx;
}
.goods_thumb>image{
  width:150rpx;
  height:150rpx;
}
.goods_content{
  flex:1;
  padding-left:20rpx;
  display:flex;
  flex-direction: column;
}
.goods_title{
  flex:1;
}
.goods_more_info{
  height:60rpx;
  display:flex;
  flex-direction: row;
  align-items: center;
  color:#F59800;
}
.goods_price{
  flex:1;
  font-size:28rpx;
}
.goods_button{
  height:60rpx;
  width:200rpx;
  line-height:60rpx;
  font-size:28rpx; 
  background-color:#F59800;
  color:#fff;
}

.footer{
  position: fixed;
  bottom:0;
  width:100%;
  height:100rpx;
  display:flex;
  background-color:#fff;
  font-size:28rpx;
  line-height:100rpx;
  text-align:center;
}
.footer>view{
  flex:1;
}
.footer>image{
  width:100rpx;
  height:100rpx;
}

.now_buy{
  background:#009999;
  color:#fff;
}

.margin-bottom{
  margin-bottom:100rpx;
}

.hide{
  display: none;
}

.postage{
  font-size:24rpx;
  color:#777;
  margin-top:10rpx;
}