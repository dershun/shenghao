@import "/public/common.wxss";

.cart_list{
  display:flex;
  flex-direction: row;
  background-color:#fff;
  align-items: center;
  border-bottom:1px solid #efefef;
}
.check_box{
  width:70rpx;
  padding-left:20rpx;
}
.check_box>radio{
  margin:auto;
}
.goodsinfo{
  flex:1;
}
.goods_list{
  display:flex;
  flex-direction: row;
  height:150rpx;
  background-color:#fff;
  padding:20rpx;
  font-size:24rpx;
}
.goods_thumb{
  width:150rpx;
}
.goods_thumb>image{
  width:150rpx;
  height:150rpx;
}
.goods_content{
  flex:1;
  padding-left:20rpx;
  display:flex;
  flex-direction: column;
}
.goods_title{
  flex:1;
  display: flex;
  flex-direction: row
}

.goods_title navigator{
  flex:1;
}

.goods_more_info{
  height:60rpx;
  display:flex;
  flex-direction: row;
  align-items: center;
  color:#F59800;
}
.goods_price{
  flex:1;
  font-size:28rpx;
}
.goods_button{
  height:60rpx;
  width:200rpx;
  line-height:60rpx;
  font-size:28rpx; 
  background-color:#F59800;
  color:#fff;
}
.goods_plus{
  width:40rpx!important;
  height:40rpx!important;
}
.goods_more_info>input{
  width:40rpx;
  text-align:center;
}

.footer{
  position: fixed;
  bottom:0;
  width:100%;
  height:100rpx;
  display:flex;
  background-color:#fff;
  font-size:28rpx;
  line-height:100rpx;
  text-align:center;
  z-index:2;

}
.footer>image{
  width:100rpx;
  height:100rpx;
}
.check_box{
  width:50rpx;
  background-color:#fff!important;
  color:#000!important;
}

.join_cart{
  flex:1;
  border-right:1px solid #fff;
  
}
.all_money{flex:1}
.now_buy{
  flex:1;
  background-color:#009999 !important;
  color:#fff;
}
.del_cart{
  width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx;
}
.del_cart image{
  width: 32rpx;
  height: 32rpx;
}