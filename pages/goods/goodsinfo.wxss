@import "/public/common.wxss";
.goods_thumb{
  width:750rpx;
  height:750rpx;
}
.slide-image{
  width:750rpx;
  height:750rpx;
}
.footer{
  position: fixed;
  bottom:0;
  width:100%;
  height:100rpx;
  display:flex;
  background-color:#fff;
  font-size:32rpx;
  line-height:100rpx;
  text-align:center;
  color:#fff;
}
.footer>image{
  width:100rpx;
  height:100rpx;
}
.home{
  width:100rpx;
  height:100rpx;
  background-color:#fff!important;
}
.home>image{
  width:60rpx;
  height:60rpx;
  vertical-align: middle;
}
.join_cart{
  flex:1;
  border-right:1px solid #fff;
  background: #009999;
  height:100rpx;

}
.now_buy{
  flex:1;
  background: #009999;
  height:100rpx;

}

.goods_info{
  font-size:24rpx;
  background-color:#fff;
  display:flex;
  flex-direction: column;
  padding:20rpx;
  height:150rpx;
}
.goods_title{
  flex:1;
  font-size:30rpx!important;
  line-height:40rpx;
}
.goods_price{
  flex:1;
  color:#F59800;
  line-height:30rpx;
}
.goods_moreinfo{
  flex:1;
  width:100%;
  display:flex;
  flex-direction: row;
  color:#CCCCCC;
}
.kucun{
  flex:1;
}
.sales{
  flex:1;
  text-align:right;
}
.view_title{
  height:100rpx;
  line-height:100rpx;
  font-size:28rpx;
  background-color:#fff;
  padding-left:20rpx;
  border-bottom:1px solid #efefef;
}
.goods_content{
  background-color:#fff;
  margin-bottom:100rpx;
  
}
