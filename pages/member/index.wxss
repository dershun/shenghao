}

.orderstatelist{
  background: #fff;
  height: 140rpx;
  margin-top: 15rpx;
  display: flex;
}

.orderstatelist .list{
  flex: 1;
  text-align: center;
  margin-top: 20rpx;
}

.orderstatelist .list image{
  width: 60rpx;
  height: 60rpx;
}

.orderstatelist .list text{
  font-size: 24rpx;
  display: block;
}

.service_list{
  background: #fff;
  margin-top: 20rpx;
}

.service_list .service{
  height: 100rpx;
  display: flex;
  flex-direction:row;
}

.service .tubiao{
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.service .title{
  flex: 1;
  font-size: 26rpx;
  line-height: 100rpx;
  margin-left: 20rpx;
}

.service .youjt{
