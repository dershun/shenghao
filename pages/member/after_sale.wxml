<!--pages/member/after_sale.wxml-->
<form bindsubmit="formSubmit" bindreset="formReset" class='form'>
  <view class="section">
    <view class="section__title"><image src="../../images/thone.png" class='youjt'></image></view>
    <input name="tel" type="number"  cursor-spacing="50" placeholder="请输入联系方式" maxlength="11"/>
  </view>

  <view class="section">
    <view class="section__title"><image src="../../images/shuoming.png" class='youjt'></image></view>
    <textarea name="reason" cursor-spacing="50" maxlength="200" placeholder="请详细描述您遇到的问题（字数200字以内）" />
  </view>

  <view class="btn-area">
    <button formType="submit">提交</button>
  </view>
</form>
