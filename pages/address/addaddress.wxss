/* pages/member/addaddress.wxss */
@import "/public/common.wxss";
.section{
  background: #fff;
  border-bottom:solid #F7F7F7 1rpx; 
  height: 100rpx;
  display: flex;
  padding: 0 30rpx;
}
.section .section__title{
  width:180rpx;
  font-size:28rpx;
  height:100rpx;
  line-height:100rpx;
  
}
.section > input{
  flex: 1;
  height: 100rpx;
  line-height:100rpx;
  font-size: 28rpx;
}

.section > picker{
  flex: 1;
  height: 100rpx;
  line-height:100rpx;
}

 .section > .switch{
   flex: 1;
   display: flex;
   flex-direction: row-reverse;
   line-height:100rpx;
 }

.picker{
  width: 100%;
  height: 100rpx;
  font-size: 28rpx;
}

.btn-area{
  position: absolute;
  bottom: 0;
  display: block;
  width: 698rpx;
  border-top :#ccc solid 1rpx;
  padding: 10px 26rpx;
}

.btn-area > button{
  position: relative;
  border: #009999;
  background: #009999;
  color: #fff;
}