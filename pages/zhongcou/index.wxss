/* pages/zhongcou/index.wxss */

.body{
  display: flex;
  flex-direction: column;
  
}

.banner{
  width:750rpx;
  height:330rpx;
}
.slide-image{
  width:750rpx;
  height:330rpx;
}
.goods_main{
  display:flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-bottom:50rpx; 
}
.goods_list{
  display:flex;
  flex-direction: column;
  width: 320rpx;
  padding:10rpx;
  font-size:24rpx;
  border:1px solid #F2F2F2;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.goods_thumb{
  width:260rpx;
  margin: 0 auto;
}
.goods_thumb>image{
  width:260rpx;
  height:260rpx;
}
.goods_content{
  flex:1;
  display:flex;
  flex-direction: column;
  margin-top: 10rpx;
}
.goods_title{
  
}
.goods_synopsis{
  color: #ccc;
}
.goods_more_info{
  height:60rpx;
  display:flex;
  flex-direction: row;
  align-items: center;
  font-size:20rpx;
}
.goods_price{
  color:#f00;
  font-size:28rpx;
  margin-right: 10rpx;
}
.goods_button{
  height:60rpx;
  width:200rpx;
  line-height:60rpx;
  font-size:28rpx; 
  background-color:#F59800;
  color:#fff;
}